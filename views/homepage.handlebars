<div id="blog">
    <!-- Loop over each object in the blogposts array -->
  {{#each blogposts as |post| }}
  <div class="row mb-4 project" id="{{post.id}}">

    <div class="col-md-7">
      <h2>
        {{post.title}}
      </h2>
    </div>
    
    <div class="col-md-5">
      <h2><a href="/post/{{post.id}}" data-id="{{post.id}}">{{post.name}}</a></h2>
      <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
    </div>

  </div>
  {{/each}}
</div>
