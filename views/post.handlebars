<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>user_id: {{user_id}}... blog_id: {{blog_id}}</p>
  <div>__________________________________________________________</div>

  <h3> Trolling (comments) </h3>
  {{#each comments as |com|}}
    <p>
      <span for="img" aria-label="money">Comment {{count @index}}:&emsp;</span>
      <span class="dollar-amount">{{com.contents}}</span>
    </p>
    {{/each}}
  
  <p>
    <button class="btn btn-primary" id="comment-btn" data-id="{{{blog_id}}}">Add comment</button>
  </p>
</div>
